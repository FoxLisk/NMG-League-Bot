{% extends "season_base" %}

{% import "macros" as macros %}

{% block pagename %}{{ bracket.bracket.name }} Detail{% endblock %}
{% block season_body %}

<div id="bracket-detail-page">
    <h2 id="bracket-title" title="Bracket id#{{ bracket.bracket.id }}">Bracket: {{ bracket.bracket.name }}</h2>
    <hr id="bracket-title-separator" />

    {% for round in bracket.rounds %}
        <div class="bracket-round-container">
            <h3 class="bracket-round-number">Round {{ round.round_num }}</h3>
            <table class="bracket-round">
                <thead>
                    <tr>
                        <td>
                            Player 1
                        </td>
                        <td>
                            Player 2
                        </td>
                        <td>
                            Scheduled Race Date
                        </td>
                        <td>
                            Scheduled Race Link
                        </td>
                    </tr>
                </thead>
                <tbody>
                {% for race in round.races %}
                <tr title="Race id #{{ race.race_id }}" >
                    <td class="{% if race.player_1.winner %} winner-cell {% elif race.player_1.loser %} loser-cell {% endif %}">
                        {{ macros::link(href=race.player_1.player_detail_url, text=race.player_1.name_and_status) }}
                    </td>
                    <td class="{% if race.player_2.winner %} winner-cell {% elif race.player_2.loser %} loser-cell {% endif %}">
                        {{ macros::link(href=race.player_2.player_detail_url, text=race.player_2.name_and_status) }}
                    </td>
                    <td>
                        {% if race.scheduled %}
                            {{ race.scheduled }}
                        {% endif %}
                    </td>
                    <td>
                        {% if race.scheduled %}
                            {{ macros::link(href=race.channel, text=race.channel) }}
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <hr class="template-item-separator" />
    {% endfor %}
</div>
{% endblock %}
