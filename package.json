{
  "scripts": {
    "compile": "npm run compile:sass && npm run compile:tailwindcss",
    "compile:watch": "concurrently --kill-others \"npm run compile:sass -- --watch\" \"npm run compile:tailwindcss -- --watch\"",
    "compile:sass": "sass http/stylesheets/:http/static/css/",
    "compile:tailwindcss": "tailwindcss -i ./tailwind_input.css -o ./http/static/css/tailwind.css"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "sass": "^1.63.4",
    "tailwindcss": "^3.3.2"
  }
}
